<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.colorscheme.app.controller.FXAppController">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0">
         <children>
            <Label text="GENERATE A COLOR SCHEME FROM AN IMAGE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Choose the amount of colors to be picked:">
               <font>
                  <Font size="13.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Spinner editable="true" prefHeight="25.0" prefWidth="60.0">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Spinner>
            <Button mnemonicParsing="false" text="Upload image">
               <padding>
                  <Insets bottom="7.0" left="10.0" right="10.0" top="7.0" />
               </padding>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <CheckBox mnemonicParsing="false" text="Automatically download color scheme when finished">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </CheckBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
